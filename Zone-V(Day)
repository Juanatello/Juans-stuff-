<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Valentine</title>
  <style>
    /* Optional styling so the moving button stays visible initially */
    body { font-family: system-ui, Arial, sans-serif; }
    #popup { padding: 1rem; }
    #no { position: absolute; } /* allows left/top to take effect */
  </style>
</head>
<body>
  <div id="popup">
    <p>Will you be my Valentine?</p>
    <button onclick="yes()">Yes</button>
    <button id="no" onmouseover="moveNo()">No</button>
  </div>

  <script>
    function moveNo() {
      const noBtn = document.getElementById('no');

      // Make sure it can move (absolute positioning)
      noBtn.style.position = 'absolute';

      // Keep the button fully in view by subtracting its size
      const maxLeft = window.innerWidth  - noBtn.offsetWidth;
      const maxTop  = window.innerHeight - noBtn.offsetHeight;

      const left = Math.random() * Math.max(0, maxLeft);
      const top  = Math.random() * Math.max(0, maxTop);

      noBtn.style.left = `${left}px`;
      noBtn.style.top  = `${top}px`;
    }

    function yes() {
      alert('Yay!');
    }
  </script>
</body>
</html>
``
